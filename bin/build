#!/usr/bin/env bash
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
SRC="$DIR/../"
TARGET="$DIR/../../budgety.github.io"

#wipe out target
cd $TARGET && `rm -rf "!(.git)"`

#copy .nojekyll
cp "$SRC/.nojekyll" "$TARGET/.nojekyll"

#build
cd $SRC && jekyll build --config $SRC/_config.yml

#copy _site
cp -r "$SRC/_site/" "$TARGET/"
